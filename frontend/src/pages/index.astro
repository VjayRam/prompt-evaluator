      $('tabSummary').classList.toggle('hidden', tab.dataset.tab !== 'summary');
      $('tabDetails').classList.toggle('hidden', tab.dataset.tab !== 'details');
    };
  });

  // Downloads

  $('downloadCsv').onclick = () => {
    if (!state.results) return;
    const { summary, results } = state.results;
    const metrics = Object.keys(summary);
    // Include both rating and explanation columns for each metric
    const headers = ['prompt', 'response', ...metrics.flatMap(m => [m + '_rating', m + '_explanation'])];
    const rows = results.map(r => headers.map(h => `"${String(r[h] || '').replace(/"/g, '""')}"`).join(','));
    download([headers.join(','), ...rows].join('\n'), 'results.csv', 'text/csv');
  };

  $('downloadJson').onclick = () => {
    if (!state.results) return;
    download(JSON.stringify(state.results, null, 2), 'results.json', 'application/json');
  };

  function download(content, name, type) {
    const blob = new Blob([content], { type });
    const url = URL.createObjectURL(blob);
    const a = document.createElement('a');
    a.href = url;
    a.download = name;
    a.click();
    URL.revokeObjectURL(url);
  }

  // Reset All
  $('resetAllBtn').onclick = () => {
    if (confirm('Are you sure you want to reset all settings? This will clear your API key, dataset, and custom metrics.')) {
      localStorage.removeItem('evalState');
      location.reload();
    }
  };

  // Advanced Settings Toggle
  $('advancedToggle').onclick = () => {
    const content = $('advancedContent');
    const chevron = $('advancedChevron');
    const isHidden = content.classList.contains('hidden');
    
    content.classList.toggle('hidden');
    chevron.style.transform = isHidden ? 'rotate(180deg)' : '';
  };

  // Custom Rate Limits
  $('customRpm').oninput = (e) => {
    const value = parseInt(e.target.value);
    state.customRateLimits.rpm = isNaN(value) ? null : value;
    saveState();
  };

  $('customRps').oninput = (e) => {
    const value = parseInt(e.target.value);
    state.customRateLimits.rps = isNaN(value) ? null : value;
    saveState();
  };

  $('resetRateLimits').onclick = () => {
    state.customRateLimits = { rpm: null, rps: null };
    $('customRpm').value = '';
    $('customRps').value = '';
    
    // Update placeholders with provider defaults if available
    if (state.provider && RATE_LIMITS[state.provider]) {
      const limits = RATE_LIMITS[state.provider];
      $('customRpm').placeholder = limits.rpm;
      $('customRps').placeholder = limits.rps;
    }
    saveState();
  };

  // Update rate limit placeholders when provider changes
  function updateRateLimitPlaceholders() {
    if (state.provider && RATE_LIMITS[state.provider]) {
      const limits = RATE_LIMITS[state.provider];
      $('customRpm').placeholder = limits.rpm;
      $('customRps').placeholder = limits.rps;
    } else {
      $('customRpm').placeholder = '—';
      $('customRps').placeholder = '—';
    }
  }

  // Init
  loadState();
  loadMetrics();
</script>
