---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Prompt Performance Evaluation Platform" />
    <link rel="icon" type="image/png" href="/logo.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <!-- Header -->
    <header class="border-b border-zinc-800 bg-zinc-950/80 backdrop-blur-sm sticky top-0 z-40">
      <div class="max-w-6xl mx-auto px-6 h-14 flex items-center justify-between">
        <div class="flex items-center gap-2">
          <img src="/logo.png" alt="PromptEval Logo" class="w-9 h-9 rounded-md" />
          <span class="font-semibold text-white">PromptEval</span>
        </div>
        
        <div class="flex items-center gap-3">
          <span class="badge badge-success">
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
            </svg>
            Secure
          </span>
        </div>
      </div>
    </header>

    <!-- Main -->
    <main class="flex-1 max-w-6xl w-full mx-auto px-6 py-8">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-zinc-800 py-4">
      <div class="max-w-6xl mx-auto px-6 text-center text-xs text-zinc-600">
        Prompt Performance Evaluator
      </div>
    </footer>
  </body>
</html>
