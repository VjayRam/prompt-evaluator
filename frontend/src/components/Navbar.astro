---
import { Image } from 'astro:assets';
import logoImage from '../assets/logo.png';

const { currentPath } = Astro.props;
---

<header class="border-b border-zinc-800 bg-zinc-950/80 backdrop-blur-sm sticky top-0 z-40">
  <div class="max-w-6xl mx-auto px-4 md:px-6 h-14 flex items-center justify-between relative">
    <a href="/" class="flex items-center gap-2 hover:opacity-80 transition-opacity shrink-0">
      <Image src={logoImage} alt="PromptFlow Logo" class="w-8 h-8 md:w-9 md:h-9 rounded-md" loading="eager" />
      <span class="font-semibold text-white hidden sm:block">PromptFlow</span>
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center gap-1 absolute left-1/2 -translate-x-1/2 w-auto justify-center">
      <a href="/dashboard" class:list={[
        "px-3 py-1.5 text-sm font-medium rounded-md transition-colors",
        currentPath === '/dashboard' ? "text-white bg-zinc-800/50" : "text-zinc-400 hover:text-white hover:bg-zinc-800/50"
      ]}>Dashboard</a>
      <button class="px-3 py-1.5 text-sm font-medium text-zinc-500 cursor-not-allowed" disabled>Builder</button>
      <button class="px-3 py-1.5 text-sm font-medium text-zinc-500 cursor-not-allowed" disabled>Optimizer</button>
      <a href="/evaluator" class:list={[
        "px-3 py-1.5 text-sm font-medium rounded-md transition-colors",
        currentPath === '/evaluator' ? "text-white bg-zinc-800/50" : "text-zinc-400 hover:text-white hover:bg-zinc-800/50"
      ]}>Evaluator</a>
    </nav>
    
    <div class="flex items-center gap-2 md:gap-3 shrink-0">
      <a href="https://github.com/VjayRam/prompt-evaluator" target="_blank" rel="noopener noreferrer" class="text-zinc-400 hover:text-white transition-colors" title="View on GitHub" aria-label="View on GitHub">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
        </svg>
      </a>
      <span class="badge badge-success inline-flex">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
        </svg>
        Secure
      </span>
      
      <!-- Mobile Menu Button -->
      <button id="mobileMenuBtn" class="md:hidden text-zinc-400 hover:text-white p-1" aria-label="Toggle menu">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Mobile Navigation -->
  <div id="mobileMenu" class="hidden md:hidden absolute top-14 left-0 w-full border-b border-zinc-800 bg-zinc-950 shadow-xl">
    <div class="px-4 py-3 space-y-2">
      <a href="/dashboard" class:list={[
        "block w-full text-left px-3 py-2 text-sm font-medium rounded-md transition-colors",
        currentPath === '/dashboard' ? "text-white bg-zinc-800" : "text-zinc-400 hover:text-white hover:bg-zinc-800"
      ]}>Dashboard</a>
      <button class="block w-full text-left px-3 py-2 text-sm font-medium text-zinc-500 cursor-not-allowed" disabled>Builder</button>
      <button class="block w-full text-left px-3 py-2 text-sm font-medium text-zinc-500 cursor-not-allowed" disabled>Optimizer</button>
      <a href="/evaluator" class:list={[
        "block w-full text-left px-3 py-2 text-sm font-medium rounded-md transition-colors",
        currentPath === '/evaluator' ? "text-white bg-zinc-800" : "text-white hover:bg-zinc-800"
      ]}>Evaluator</a>
    </div>
  </div>
</header>

<script>
  const mobileMenuBtn = document.getElementById('mobileMenuBtn');
  const mobileMenu = document.getElementById('mobileMenu');
  
  if (mobileMenuBtn && mobileMenu) {
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>

